<p style="color: green"><%= notice %></p>

<h1>Friends</h1>

<table id="friends" class="table table-striped table-bordered table-hover">
<thead class="dark">
<tr>
<th>First Name</th>
<th>Last Name</th>
<th>Email</th>
<th>Phone</th>
<th>Twitter</th>
<th colspan="3"></th>
</tr>
</thead>
<tbody class=
"table-group-divider">
  <% @friends.each do |friend| %>
   <%= render "partials/friend", friend: friend %>
   <td><%= button_to "View", friend, method: :get, class: "btn btn-primary" %></td>
   <td><%= button_to "Edit", edit_friend_path(friend), method: :get, class: "btn btn-primary" %></td>
   <td><%= button_to "Delete", friend, method: :delete, data: {turbo_confirm: "Are you sure you want to delete this friend?"}, class: "btn btn-danger" %></td>
   </tr>
  </div>
  <% end %>
</tbody>
  
</table>

<%= button_to "New friend", new_friend_path, method: :get, class: "btn btn-primary" %>
