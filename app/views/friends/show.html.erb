<p style="color: green"><%= notice %></p>



<div class="card">
  <h5 class="card-header"><strong><%= @friend.first_name %> <%= @friend.last_name %></strong></h5>
  <div class="card-body">
  <p><strong>Email:</strong> <%= @friend.email %></p>
  <p><strong>Phone:</strong> <%= @friend.phone %></p>
  <p><strong>Twitter:</strong> <%= @friend.twitter %></p>
  <div class="horizontal">
  <%= button_to "Edit", edit_friend_path(@friend), class: "margin-r-5 btn btn-primary", method: :get %>
  <%= button_to "Back", friends_path, method: :get, class: "btn btn-secondary"%>
  </div>
  </div>
</div>



  
